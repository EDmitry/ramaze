#!/usr/bin/env ruby

begin
  # try getting the ramaze belonging to this file
  file = File.symlink?(__FILE__) ? File.readlink(__FILE__) : __FILE__
  require File.expand_path('../../lib/ramaze/bin', file)
rescue LoadError
  begin
    # try any ramaze/bin in $LOAD_PATH
    require 'ramaze/bin'
  rescue LoadError
    # finally ask for rubygems for ruby 1.8
    require 'rubygems'
    require 'ramaze/bin'
  end
end

Ramaze::Bin.new(ARGV).run
